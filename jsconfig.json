{
    "compilerOptions": {
        "module": "nodenext",
        "target": "esnext",
        "paths": {
            "@shared/*": ["resources/js/shared/*"],
            "@components/*": ["resources/js/components/*"],
            "@pages/*": ["resources/js/pages/*"],
            "@utils/*": ["resources/js/utils/*"],
            "@hooks/*": ["resources/js/hooks/*"],
            "@assets/*": ["resources/js/assets/*"]
        }
    },
    "exclude": ["node_modules"]
}
